<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_subreddit"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_url"
        android:layout_toRightOf="@+id/detail_subreddit"
        android:layout_alignTop="@+id/detail_subreddit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_posttitle"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:textSize="20dp"
        android:layout_below="@+id/detail_subreddit"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_author"
        android:layout_below="@+id/detail_posttitle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_date"
        android:layout_alignTop="@+id/detail_author"
        android:layout_toRightOf="@+id/detail_author" />
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:id="@+id/detail_preview"
        android:layout_below="@+id/detail_author"/>

</RelativeLayout>