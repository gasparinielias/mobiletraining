<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:paddingLeft="18dp"
    android:paddingRight="18dp">

    <ImageView
        android:layout_width="@dimen/postimagedimen"
        android:layout_height="@dimen/postimagedimen"
        android:id="@+id/postimage"
        android:padding="3dp">
    </ImageView>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="@dimen/postimagedimen"
        android:layout_height="@dimen/postimagedimen"
        android:layout_alignTop="@id/postimage"
        android:layout_alignLeft="@id/postimage"
        style="@android:style/Widget.ProgressBar"
        />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/postsubreddit"
        android:layout_toRightOf="@id/postimage"
        android:layout_alignTop="@id/postimage"/>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/postdate"
        android:layout_toRightOf="@id/postsubreddit"
        android:layout_alignTop="@id/postimage"
        android:gravity="right" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/posttitle"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/postimage"
        android:layout_below="@id/postsubreddit"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/commentsicon"
        android:layout_below="@id/posttitle"
        android:layout_toRightOf="@id/postimage"
        android:background="@android:drawable/sym_action_chat"/>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/postcomments"
        android:layout_toRightOf="@id/commentsicon"
        android:layout_below="@id/posttitle"/>


</RelativeLayout>